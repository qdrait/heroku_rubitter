<%= form_with(model: tweet, local: true,url: choose_new_or_edit) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= tweet.errors.count %> 件のエラーがありますが、エラーメッセージをきれいに表示する方法を調べきれてないので、一旦この表示。</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :content, id: :tweet_content, size: 50 %>
  </div>

  <div class="actions">
    <%= form.submit "つぶやく",class: "btn btn-default tweetBox"%>
  </div>
<% end %>

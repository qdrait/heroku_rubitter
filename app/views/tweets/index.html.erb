<p id="notice"><%= notice %></p>

  <% @tweets.each do |tweet| %>
    <div class="tweetArea row">
      <div class="col-sm-2">
        <div class="tweetImage"><span class="glyphicon glyphicon-hand-right"></span></div>
      </div>
      
      <div class="col-sm-10">
        <div class="tweetContent row">
          <%= tweet.content %>
        </div>
        <div class="tweetControl row">
          <div class="col-sm-offset-3 col-sm-3"><%= link_to 'SHOW', tweet,class: "btn btn-info" %></div>
          <div class="col-sm-offset-0 col-sm-3"><%= link_to 'EDIT', edit_tweet_path(tweet),class: "btn btn-info" %></div>
          <div class="col-sm-offset-0 col-sm-3"><%= link_to 'DELETE', tweet,method: :delete,data:{ confirm: '削除してよろしいか？'},class:"btn btn-danger"%></div>
        </div>
        <div class="tweetAttribute row">
          <%= tweet.created_at %>
        </div>
      </div>
      
    </div>
  <% end %>
  
  
  
  
  

<br>


<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
